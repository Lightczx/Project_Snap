            <Trigger SourceName="PART_Button" Property="ButtonBase.IsPressed" Value="True">
              <Setter TargetName="PART_Button" Value="{DynamicResource BlackBrush}" Property="Control.Background" />
              <Setter TargetName="PART_Button" Value="{DynamicResource WhiteBrush}" Property="Control.Foreground" />
            </Trigger>
            <Trigger Property="Controls:TimePickerBase.IsClockVisible" Value="False">
              <Setter TargetName="PART_Clock" Property="UIElement.Visibility" Value="Collapsed" />
            </Trigger>
            <Trigger Property="Controls:TimePickerBase.IsDatePickerVisible" Value="True">
              <Setter TargetName="PART_Calendar" Property="UIElement.Visibility" Value="Visible" />
