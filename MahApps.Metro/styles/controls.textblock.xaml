<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style x:Key="MetroTextBlock" TargetType="{x:Type TextBlock}" />
  <Style x:Key="MahApps.Metro.Styles.MetroWatermarkTextBlock" BasedOn="{StaticResource MetroTextBlock}" TargetType="{x:Type TextBlock}">
    <Setter Property="UIElement.IsHitTestVisible" Value="False" />
    <Setter Property="UIElement.Opacity" Value="0.6" />
  </Style>
  <Style x:Key="MetroAutoCollapsingTextBlock" BasedOn="{StaticResource MetroTextBlock}" TargetType="{x:Type TextBlock}">
    <Setter Property="TextBlock.FontSize" Value="{DynamicResource FloatingWatermarkFontSize}" />
    <Setter Property="UIElement.Opacity" Value="0.6" />
    <Style.Triggers>
      <Trigger Property="TextBlock.Text" Value="">
        <Setter Property="UIElement.Visibility" Value="Collapsed" />
      </Trigger>
    </Style.Triggers>
  </Style>
</ResourceDictionary>